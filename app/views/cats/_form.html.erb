<%= form_for @cat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
    <br>
  <%= f.label :birth_date %>
  <% if @action == "update" %>
    <%= f.text_field :birth_date %>
  <% else %>
    <%= f.text_field :birth_date, value: 'yyyy/mm/dd' %>
  <% end %>
    <br>
  <%= f.label :sex %>
  <%= f.radio_button :sex, "M" %>
  <%= f.label :sex_m, "M" %>
  <%= f.radio_button :sex, "F" %>
  <%= f.label :sex_f, "F" %>

    <br>
  <%= f.label :color %>
  <%= f.select :color, $CAT_COLORS, prompt: "--Choose a Color--" %>
    <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.submit %>
<% end %>